doctype html
html(lang="en")
  include ../components/headerfile
  +headerfile('Contact Us')
  body

    // loader start
    +loader
    // loader end

    // header start       
    include ../components/header
    // header end

    // Breadcrumb Start
    +breadcrumb('Contact Us')
    // Breadcrumb end   

    // Get In Touch Start
    section.getin-touch.space-py-100
      .container
        .row         
          .col-lg-4
            .row.cdx-row
              .col-lg-12.col-sm-6
                .contact-grid.wow.fadeInUp
                  .icon-wrap
                    i(data-feather="map-pin")
                  .detail-wrap
                    h4 Office Address
                    p 29/C Mizza Road, Ukraine
              .col-lg-12.col-sm-6
                .contact-grid.wow.fadeInUp
                  .icon-wrap
                    i(data-feather="phone")
                  .detail-wrap
                    h4 Call Us
                    p +380 123 65X XXXX
              .col-lg-12.col-sm-6
                .contact-grid.wow.fadeInUp
                  .icon-wrap
                    i(data-feather="mail")
                  .detail-wrap
                    h4 Email Us
                    p
                      a(href='mailto:admin@example.com') admin@example.com
              .col-lg-12.col-sm-6
                .contact-grid.wow.fadeInUp
                  .icon-wrap
                    i(data-feather="clock")
                  .detail-wrap
                    h4 Office Time
                    p Sun - Fri (08AM - 10PM) 
          .col-lg-8.align-self-center
            .contact-form.wow.fadeInUp
              .touch-header
                h2 Get In Touch
                p
                  | It is a long established fact that a reader will be distracted by the readable
                  | content of a page when looking at its layout.
              form(action="#")
                .form-group
                  .group-small
                    div
                      input.form-control(type='text' name='name' placeholder='Your Name' required)                   
                    div
                      input.form-control(type='email' name='email' placeholder='Your Email' required)
                .form-group
                  input.form-control(type='text' name='subject' placeholder='Your Subject' required)
                .form-group.mb-0
                  textarea.form-control(name='message' cols='30' rows='5' placeholder='Write Your Message')
                button.btn.btn-primary(type='submit')
                  i.fa.fa-paper-plane
                  |  Send Message
    // Get In Touch End

    // Map Start
    section.touch-map.wow.fadeInUp
      iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10938209.494752761!2d22.208320093863712!3d47.98547154770034!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d1d9c154700e8f%3A0x1068488f64010!2sUkraine!5e0!3m2!1sen!2sin!4v1656669657310!5m2!1sen!2sin' style='border:0;' allowfullscreen='')
    // Map End


       
    // footer start       
    include ../components/footer
    // footer end

    // theme customizer start
    +customizer
    // theme customizer end

    // Tap To Top Start
    a.scroll-top(href='Javascript:void(0)')
      i.fa.fa-angle-double-up
    // Tap To Top End

    include ../components/footerfile