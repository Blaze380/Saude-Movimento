doctype html
html(lang="en")
  include ../components/headerfile
  +headerfile('Verify Email')
  body

    // loader start
    +loader
    // loader end

    // header start       
    include ../components/header
    // header end

    // Breadcrumb Start
    +breadcrumb('login')
    // Breadcrumb end

    // Login Start
    section.space-py-100
      .container
        .row
          .col-12
            .codex-authbox
              .auth-header
                .auth-icon               
                  i.fa.fa-envelope
                h3 Verify Your Email Address
                p you've entered 
                  b Yogwe@Example.Com 
                  | as the email address for yiur account. please verify this email address by clicking button below.
              .group-form.mb-0
                button.btn.btn-primary(type='submit') Verify Email
    // Login End

       
    // footer start       
    include ../components/footer
    // footer end

    // theme customizer start
    +customizer
    // theme customizer end

    // Tap To Top Start
    a.scroll-top(href='Javascript:void(0)')
      i.fa.fa-angle-double-up
    // Tap To Top End

    include ../components/footerfile