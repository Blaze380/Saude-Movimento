doctype html
html(lang="en")
  include ../components/headerfile
  +headerfile('Pricing Plan')
  body

    // loader start
    +loader
    // loader end

    // header start       
    include ../components/header
    // header end

    // Breadcrumb Start
    +breadcrumb('Pricing Plan')
    // Breadcrumb end

    // pricing start
    section.space-py-100     
      .container
        .row.cdx-row
          .col-md-6.col-lg-4(data-sal-delay="100" data-sal="slide-up" data-sal-duration="800")
            +pricinggrid('','Basic Plan','$69','active','active','active','','','')           
          .col-md-6.col-lg-4(data-sal-delay="200" data-sal="slide-up" data-sal-duration="800")
            +pricinggrid('active','Standard Plan','$109','active','active','active','active','','')
          .col-md-6.col-lg-4(data-sal-delay="300" data-sal="slide-up" data-sal-duration="800")
            +pricinggrid('','Premium Plan','$169','active','active','active','active','active','active')
    // pricing end
       
    // footer start       
    include ../components/footer
    // footer end

    // theme customizer start
    +customizer
    // theme customizer end

    // Tap To Top Start
    a.scroll-top(href='Javascript:void(0)')
      i.fa.fa-angle-double-up
    // Tap To Top End

    include ../components/footerfile